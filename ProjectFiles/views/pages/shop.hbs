<section class="container my-4">
  <div class="row g-3">
    {{#each products}}
      <div class="col-12 col-md-6 col-lg-4">
        <article class="card h-100 shadow-sm">
          <img src="{{image}}" class="card-img-top" alt="Event image for {{title}}">
          <div class="card-body d-flex flex-column">
            <h3 class="h5 card-title mb-2">{{title}}</h3>
            <ul class="list-unstyled small text-body-secondary mb-3">
              <li><strong>Date:</strong> {{date}}</li>
              <li><strong>Time:</strong> {{time}}</li>
              <li><strong>Location:</strong> {{location}}</li>
            </ul>
            <p class="card-text small mb-3">{{info}}</p>
            <div class="mt-auto">
              <div class="d-grid gap-2 d-sm-flex">
                <a href="#" class="btn btn-outline-primary flex-sm-fill">Group</a>
                <a href="#" class="btn btn-primary flex-sm-fill">Single</a>
              </div>
            </div>
          </div>
        </article>
      </div>
    {{/each}}
  </div>
</section>
