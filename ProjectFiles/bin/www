#!/usr/bin/env node
var app = require('../app');
var debug = require('debug')('projectfiles:server'); // name can vary
var http = require('http');

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

var server = http.createServer(app);
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

function normalizePort(val){ var p = parseInt(val, 10); if (isNaN(p)) return val; if (p >= 0) return p; return false; }
function onError(error){
  if (error.syscall !== 'listen') throw error;
  switch (error.code){
    case 'EACCES': console.error('Port ' + port + ' requires elevated privileges'); process.exit(1);
    case 'EADDRINUSE': console.error('Port ' + port + ' is already in use'); process.exit(1);
    default: throw error;
  }
}
function onListening(){ debug('Listening on ' + port); console.log('http://localhost:' + port); }
